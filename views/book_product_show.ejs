<div class="box product_show" id="product-<%=this.product.id%>">
    <h2>
        <%= this.product.name %>
    </h2>
    <img src="<%=this.product.image_url%>" alt=""/>
    <p class="attribute">
        <span class="sales_rank_label label">
            <%= $('product_label rank', Qck.locale[current_language]).text() %>
        </span>
        <span class="sales_rank">
            <%= this.product.sales_rank %>
        </span>
    </p>
    <p class="attribute">
        <span class="price_label label">
            <%= $('product_label price', Qck.locale[current_language]).text() %>
        </span>
        <span class="price">
            <%= this.product.price %>
        </span>
    </p>
    <p class="attribute">
        <span class="authors-label label">
            <%= $('product_info authors', Qck.locale[current_language]).text() %>
        </span>
        <span class="authors">
            <%= this.product.authors %>
        </span>
    </p>
    <p class="attribute">
        <span class="publisher-label label">
            <%= $('product_info publisher', Qck.locale[current_language]).text() %>
        </span>
        <span class="publisher">
            <%= this.product.authors %>
        </span>
    </p>
    <p class="attribute">
        <span class="published_date-label label">
            <%= $('product_info published_date', Qck.locale[current_language]).text() %>
        </span>
        <span class="published_date">
            <%= this.product.published_date %>
        </span>
    </p>
    <p class="attribute">
        <span class="isbn10-label label">
            <%= $('product_info isbn_10', Qck.locale[current_language]).text() %>
        </span>
        <span class="isbn10">
            <%= this.product.ISBN_10 %>
        </span>
    </p>
    <p class="attribute">
        <span class="isbn13-label label">
            <%= $('product_info isbn_13', Qck.locale[current_language]).text() %>
        </span>
        <span class="isbn13">
            <%= this.product.ISBN_13 %>
        </span>
    </p>
    <p class="attribute">
        <span class="language-label label">
            <%= $('product_info language', Qck.locale[current_language]).text() %>
        </span>
        <span class="language">
            <%= this.product.language %>
        </span>
    </p>
    <p class="attribute">
      <a href="#" class="addcart">Add to cart</a>
    </p>
    <div class="clear"></div>
</div>