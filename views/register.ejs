<div class="form box">
    <h3 class="register-username-title"><%= $('header register',Qck.locale[current_language]).text() %></h3>

    <form action="/" method="post">
        <div class="form_item">
            <span class="label register-username-label"><%= $('reg_labels username',Qck.locale[current_language]).text() %></span>
            <input type="text" id="reg-username" name="username" class="register-username-label input"/>
        </div>
        <div class="form_item">
            <span class="label register-name-label"><%= $('reg_labels name',Qck.locale[current_language]).text() %></span>
            <input type="text" id="reg-name" name="name" class="register-name-label input"/>
        </div>
        <div class="form_item">
            <span class="label register-password-label"><%= $('reg_labels password',Qck.locale[current_language]).text() %></span>
            <input type="password" id="reg-password" name="password" class="register-name-label input"/>
        </div>
        <div class="form_item">
            <span class="label register-password2-label"><%= $('reg_labels re_password',Qck.locale[current_language]).text() %></span>
            <input type="password" id="reg-password2" name="password" class="register-name-label input"/>
        </div>
        <div class="form_item">
            <span class="label register-email-label"><%= $('reg_labels email',Qck.locale[current_language]).text() %></span>
            <input type="text" id="reg-email" name="email" class="register-email-label input"/>
        </div>
        <div class="form_item">
            <span class="label register-birth-date-label"><%= $('reg_labels birth_date',Qck.locale[current_language]).text() %></span>
            <select id="day_drop_down">
            </select>
            <select id="month_drop_down">
            </select>
            <select id="year_drop_down">
            </select>
        </div>
        <div class="form_item">
            <input type="button" value="<%= $('reg_labels reg_button',Qck.locale[current_language]).text() %>" class="register-button-label form_button"/>
        </div>
    </form>
</div>