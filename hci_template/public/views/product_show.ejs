<div class="box product_show" id="product-<%=this.product.id%>">
    <h3>
        <%= this.product.name %>
    </h3>
    <div class="image"></div>
    <p class="attribute">
        <span class="label">
            Price:
        </span>
        <span class="price">
            <%= this.product.price %>
        </span>
    </p>
    <div class="clear"></div>
</div>